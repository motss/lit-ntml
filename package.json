{
  "name": "lit-ntml",
  "version": "2.19.0",
  "description": "Inspired by lit-html but for Node.js",
  "keywords": [
    "html",
    "lit-ntml",
    "minify",
    "npm",
    "ntml",
    "parse-html",
    "prettify",
    "tagged-template-literals",
    "template",
    "templating"
  ],
  "homepage": "https://github.com/motss/lit-ntml",
  "repository": {
    "type": "git",
    "url": "git@github.com:motss/lit-ntml.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "default": "./dist/index.mjs"
    },
    "./dist/*": "./dist/*"
  },
  "main": "./dist/index",
  "module": "./dist/index.mjs",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/*.*js.map",
    "dist/*.*js",
    "dist/*.d.ts.map",
    "dist/*.d.ts"
  ],
  "scripts": {
    "build": "npm run clean && npm run rollup",
    "check": "package-check",
    "clean": "shx rm -rf .*cache *.log coverage/ dist/ logs/",
    "postinstall": "npm dedupe",
    "lint": "eslint src/**/*.ts",
    "lint:build": "npm run lint -- --config .build.eslintrc.json",
    "prepublishOnly": "npm run check && npm run lint:build && npm run build",
    "rollup": "rollup -c ./rollup.config.js",
    "test": "c8 --reporter=lcov --exclude=src/tests uvu -r @swc/register src/tests",
    "ts": "tsc",
    "prepare": "npm x -- husky@latest install",
    "watch": "tsc --watch"
  },
  "dependencies": {
    "nodemod": "^2.8.4",
    "parse5": "^6.0.1",
    "tslib": "^2.0.2"
  },
  "devDependencies": {
    "@reallyland/tsconfig": "^3.0.2",
    "@skypack/package-check": "^0.2.2",
    "@swc/register": "^0.1.7",
    "@types/node": "^15.12.5",
    "@types/parse5": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^4.13.0",
    "@typescript-eslint/parser": "^4.13.0",
    "c8": "^7.7.3",
    "eslint": "^7.17.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-regexp": "^0.12.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^6.0.0",
    "rollup": "^2.29.0",
    "rollup-plugin-filesize": "^9.0.2",
    "rollup-plugin-import-map": "^2.2.2",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "shx": "^0.3.2",
    "typescript": "^4.1.3",
    "uvu": "^0.5.1"
  },
  "engines": {
    "node": ">= 10.18.1",
    "npm": ">= 6.13.4"
  },
  "publishConfig": {
    "access": "public"
  }
}
