{
  "name": "lit-ntml",
  "version": "3.0.1-rc.1",
  "description": "Inspired by lit-html but for Node.js",
  "keywords": [
    "html",
    "lit-ntml",
    "minify",
    "npm",
    "ntml",
    "parse-html",
    "prettify",
    "tagged-template-literals",
    "template",
    "templating"
  ],
  "homepage": "https://github.com/motss/lit-ntml",
  "repository": {
    "type": "git",
    "url": "git@github.com:motss/lit-ntml.git"
  },
  "license": "MIT",
  "author": {
    "name": "Rong Sen Ng",
    "email": "wes.ngrongsen@gmail.com",
    "url": "https://github.com/motss"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./dist/*": "./dist/*"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "typings": "./dist/index.d.ts",
  "files": [
    "dist/*.*js.map",
    "dist/*.*js",
    "dist/*.d.ts.map",
    "dist/*.d.ts",
    "postinstall.*",
    "!**/*test*/**/*.*"
  ],
  "scripts": {
    "build": "npm run clean && tsc",
    "check": "package-check",
    "clean": "rm -rf .*cache *.log .swc/ coverage/ dist/ logs/",
    "postinstall": "sh postinstall.sh",
    "lint": "eslint src --ext .js,.ts",
    "lint:build": "npm run lint -- --config .build.eslintrc.json",
    "lint:commit": "npm x -y -- commitlint --edit",
    "pre-commit": "npm run check && nano-staged && tsc --noEmit",
    "prepublishOnly": "npm run check && npm run lint:build && npm run build",
    "test": "vitest --coverage",
    "ts": "tsc",
    "watch": "tsc --watch"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run pre-commit",
    "commit-msg": "npm run lint:commit"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "parse5": "^7.0.0",
    "tslib": "^2.4.0"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.0.2",
    "@reallyland/tsconfig": "^4.0.1",
    "@skypack/package-check": "^0.2.2",
    "@types/node": "^17.0.42",
    "@types/parse5": "^6.0.3",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "c8": "^7.11.3",
    "eslint": "^8.17.0",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-regexp": "^1.7.0",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "nano-staged": "^0.8.0",
    "simple-git-hooks": "^2.8.0",
    "typescript": "^4.7.3",
    "vitest": "^0.14.2"
  },
  "engines": {
    "node": ">= 16.x",
    "npm": ">= 8.x"
  },
  "publishConfig": {
    "access": "public"
  },
  "nano-staged": {
    "*.ts": "npm run lint:build -- --fix"
  }
}
