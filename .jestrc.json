{
  "testEnvironment": "node",
  "collectCoverage": true,
  "coverageDirectory": "./coverage",
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "collectCoverageFrom": [
    "!**/node_modules/**",
    "!**/src/demo/**/*.{js|jsx}",
    "!**/src/test*/**/*.{js|jsx}",
    "**/src/**/*.{js|jsx}"
  ],
  "verbose": true,
  "bail": true,
  "roots": [
    "<rootDir>/dist/"
  ],
  "testMatch": [
    "**/dist/test*/**/*.spec.(js|jsx)"
  ],
  "moduleFileExtensions": [
    "js",
    "jsx",
    "json"
  ]
}
